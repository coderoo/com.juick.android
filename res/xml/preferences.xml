<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/Notifications">
        <ListPreference
            android:key="refresh"
            android:title="@string/Refresh_interval"
            android:entries="@array/prefsRefreshIntervalTitles"
            android:entryValues="@array/prefsRefreshIntervalValues"
            android:defaultValue="5"
            android:persistent="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/Last_messages">
        <CheckBoxPreference
            android:key="persistLastMessagesPosition"
            android:title="Save position"
            android:summary="Position can be reset to latest by refreshing messages"
            android:defaultValue="false"
            android:persistent="true"/>
    </PreferenceCategory>
