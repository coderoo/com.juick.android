<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                >
            <Button
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="42sp"
                    android:id="@+id/single_url"
                    android:text="Goto URL"
                    >
            </Button>
            <Spinner
                    android:id="@+id/open_url"
                    android:layout_width="fill_parent"
                    android:layout_height="42sp"
                    />
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                        android:id="@+id/message_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text=" #12345:"
                        />
                <Button
                        android:layout_width="fill_parent"
                        android:drawableLeft="@drawable/mm_browse"
                        android:layout_height="42sp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:id="@+id/open_message_in_browser"
                        android:text="View in browser"
                        >
                </Button>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_recommend"
                            android:id="@+id/recommend_message"
                            android:text="@string/__Recommend"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_delete"
                            android:layout_weight="1"
                            android:id="@+id/delete_message"
                            android:text="@string/Delete"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_watch"
                            android:id="@+id/subscribe_message"
                            android:text="@string/Subscribe"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_unwatch"
                            android:id="@+id/unsubscribe_message"
                            android:text="@string/Unsubscribe"
                            >
                    </Button>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_share"
                            android:layout_weight="1"
                            android:id="@+id/share_message"
                            android:text="@string/Share"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_save"
                            android:layout_weight="1"
                            android:id="@+id/save_message"
                            android:text="@string/Save"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_unsave"
                            android:layout_weight="1"
                            android:id="@+id/unsave_message"
                            android:text="@string/Unsave"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:id="@+id/open_message"
                            android:text="@string/Open"
                            android:visibility="gone"
                            >
                    </Button>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/column_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:id="@+id/expand_message"
                            android:text="@string/Expand"
                            android:visibility="gone"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="42sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:id="@+id/translate_message"
                            android:text="R -> Ð¯"
                            >
                    </Button>
                    <Button
                            android:layout_width="fill_parent"
                            android:layout_height="62sp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:drawableLeft="@drawable/mm_userpic"
                            android:id="@+id/user_center"
                            android:text="@string/UserCenter"
                            >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
