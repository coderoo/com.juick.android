<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:orientation="vertical"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         >
    <LinearLayout
            android:id="@+id/loading"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
        <TextView
                android:paddingTop="30sp"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Loading chart engine (javascript from site). First time, this may take a while (1 megabyte uncompressed?) but it will be cached locally."
                android:textStyle="bold"></TextView>
        <Button
                android:layout_margin="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textStyle="bold"
                android:id="@+id/stop"></Button>
        <TextView
                android:paddingTop="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:id="@+id/progress"></TextView>
        <TextView
                android:paddingTop="10sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Status"
                android:id="@+id/status"></TextView>

    </LinearLayout>
    <WebView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/webview"
            >
    </WebView>

 </LinearLayout>